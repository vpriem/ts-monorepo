{
  "name": "@vpriem/ts-monorepo",
  "version": "0.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vpriem/ts-monorepo.git"
  },
  "author": "vpriem <vinzent.priem@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=12.16.0",
    "yarn": "^1.22.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "release": "lerna version",
    "publish": "lerna publish",
    "clean": "lerna run clean",
    "doc": "lerna run doc",
    "lint": "lerna run lint --",
    "format": "prettier --write packages/*/src/{*.ts,**/*.ts}",
    "test": "lerna run test",
    "u": "yarn upgrade-interactive --latest",
    "w": "yarn workspace",
    "e": "yarn workspace @vpriem/express-api-key-auth",
    "r": "yarn workspace @vpriem/rest-client",
    "k": "yarn workspace @vpriem/kafka-broker",
    "g": "yarn workspace @vpriem/geojson"
  },
  "devDependencies": {
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@commitlint/config-lerna-scopes": "16.0.0",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.13",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "codecov": "3.8.3",
    "eslint": "8.8.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "4.3.8",
    "jest": "27.4.7",
    "lerna": "4.0.0",
    "lint-staged": "12.3.2",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
