{
    "packages": ["packages/*"],
    "version": "independent",
    "npmClient": "yarn",
    "command": {
        "version": {
            "conventionalCommits": true,
            "message": "chore: release"
        }
    },
    "ignoreChanges": [
        "**/*.test.ts",
        "**/jest.*.js",
        "**/tsconfig.eslint.json",
        "**/examples/**/*"
    ],
    "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
